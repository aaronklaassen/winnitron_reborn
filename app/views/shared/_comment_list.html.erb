<% if current_user&.can_comment?(@game) %>
  <div class="comments">

    <p>
      Love this game? How does it run on your Winnitron?
      Questions, comments, complaints, or beefs?
      This is the place to let us know.
    </p>

    <div>
      <%= form_for Comment.new, html: { class: "form form-horizontal" }, remote: true do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: "control-label col-sm-12", required: true %>
        </div>
        <div class="row">
          <div class="col-sm-8"></div>
          <div class="form-group pull-right" style="margin-right: 0px">
            <%= hidden_field_tag :parent_id, @game.id %>
            <%= f.submit "post", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="existing">
      <% @game.comments.order(created_at: :asc).each do |comment| %>
        <%= render "shared/comment", comment: comment %>
      <% end %>
    </div>

  </div>
<% end %>
