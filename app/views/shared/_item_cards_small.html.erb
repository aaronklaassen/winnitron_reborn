<a href="<%= itemLink %>" class="item-card item-card-small">
  <div class="row">
    <div class="col-xs-4 item-card-image" style="background: url(<%= itemImageURL %>) center center; background-size: cover;">
    </div>
    <div class="col-xs-8 item-card-details">
      <h3 class="item-card-title"><%= itemName %></h3>
      <h4 class="item-card-info"><%= itemInfo %></h4>
    </div>
  </div>
</a>
