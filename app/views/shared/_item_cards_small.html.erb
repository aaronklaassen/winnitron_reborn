<a href="<%= item_link %>" class="item-card item-card-small">
  <div class="row">
    <div class="col-xs-4 item-card-image" style="background: url(<%= item_image_url %>) center center; background-size: cover;">
    </div>
    <div class="col-xs-8 item-card-details">
      <h3 class="item-card-title"><%= item_name %></h3>
      <h4 class="item-card-info"><%= item_info %></h4>
    </div>
  </div>
</a>
