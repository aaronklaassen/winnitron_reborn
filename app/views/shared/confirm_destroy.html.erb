<div class="text-center m-5">

  <h1>Are you sure you want to delete '<%= @to_destroy.title %>'?</h1>
  <p class="m-5"><strong>This cannot be undone.</strong></p>

  <div class="row mb-5">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <%= render "delete_warning" %>
    </div>
  </div>

  <div class="col-lg-12">
    <a href="<%= url_for(@to_destroy) %>" data-method="delete">
      <button class="btn btn-danger">
        Yes - delete.
      </button>
    </a>

    &nbsp;

    <a href="<%= url_for(@to_destroy) %>">
      <button class="btn btn-primary">
        No - cancel.
      </button>
    </a>
  </div>
</div>