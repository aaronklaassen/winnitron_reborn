<% if user_signed_in? %>

  <div class="edit-buttons dropdown">

    <% if current_user.owns?(playlist) || current_user.admin? %>
      <a href="<%= edit_playlist_path(playlist) %>">
        <button class="btn btn-success">
          Edit
        </button>
      </a>
      <a href="<%= confirm_destroy_playlist_path(playlist) %>">
        <button class="btn btn-danger" type="button">
          Delete
        </button>
      </a>

    <% end %>
  </div>

<% end %>
