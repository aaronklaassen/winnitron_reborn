<h1>Playlists</h1>

<p>
  <%= link_to "New Playlist", new_playlist_path, class: "btn btn-success" %>
</p>

<table class="table table-condensed">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% mine, theirs = @playlists.partition { |p| p.user == current_user } %>

    <tr>
      <td colspan="3">MY PLAYLISTS!</td>
    </tr>

    <%= render partial: "playlist", collection: mine %>

    <tr><td colspan="3">&nbsp;</td></tr>
    <tr>
      <td colspan="3">EVERYONE ELSE'S PLAYLISTS!</td>
    </tr>

    <%= render partial: "playlist", collection: theirs %>    
  </tbody>
</table>

<br>


