<td class="subscribe-to-playlist">
  <form action="<%= subscriptions_path %>" method="post" class="form-horizonal">
    <input type="hidden" name="playlist_id" value="<%= playlist.id %>">

    <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
    <% opts = current_user.arcade_machines.map { |am| [am.name, am.id] } %>
    <%= select_tag "arcade_machine_id", options_for_select(opts) %>

    <input type="submit" value="subscribe">
  </form>
</td>