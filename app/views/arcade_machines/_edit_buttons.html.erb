<!-- EDIT BUTTONS -->

<% if user_signed_in? %>

  <div class="edit-buttons dropdown">

    <!-- Editing Buttons if Owned -->
    <% if current_user.owns?(arcade_machine) || current_user.admin? %>
      <a href="<%= edit_arcade_machine_path(arcade_machine) %>">
        <button class="btn btn-success">
          Edit
        </button>
      </a>
      <a href="<%= confirm_destroy_arcade_machine_path(arcade_machine) %>">
        <button class="btn btn-danger" type="button">
          Delete
        </button>
      </a>
    <% end %>

  </div>

<% end %>
