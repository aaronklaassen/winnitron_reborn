<!--
  WINNITRON GRID VIEW
-->

<div class="row list-group">
  <% arcade_machines.each do |machine| %>
    <div class="item col-lg-4">

      <div class="thumbnail">
        <a
          class="quiet-link image-box"
          href="<%= arcade_machine_url(machine) %>"
          style="background: url(<%= machine.cover_image.url(w: 320) %>) center center; background-size: cover;"
        >
        </a>
        <div class="caption">
          <span class="location pull-right">
            <%= machine.location.split("\n").first %>
          </span>

          <h4 class="group inner list-group-item-heading">
            <a class="quiet-link" href="<%= arcade_machine_path(machine) %>">
              <%= machine.title %>
            </a>
          </h4>

          <%= render "arcade_machines/edit_buttons", arcade_machine: machine %>
        </div>
      </div>
    </div>
  <% end %>
</div>
