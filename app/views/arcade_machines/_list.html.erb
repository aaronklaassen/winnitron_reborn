<div class="machines row col-lg-12 col-sm-12">

  <% arcade_machines.each do |machine| %>
    <div class="col-lg-4 col-sm-6 portfolio-item">
      <div class="card h-100">
        <a href="<%= arcade_machine_path(machine) %>">
          <span class="card-img-container">
            <img class="card-img" src="<%= machine.cover_image.url(w: 340, h: 200) %>" alt="<%= machine.title %>" title="<%= machine.title %>">
          </span>

          <div class="row">
            <div class="col-lg-12 col-sm-12">
              <h4><%= machine.title %></h4>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12 col-sm-12" style="margin-top: -10px">
              <%= machine.location.city %>
            </div>
          </div>

        </a>
      </div>

    </div>
  <% end %>

</div> <!-- /.row -->
