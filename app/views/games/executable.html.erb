<script>
  var detectedFiles = <%=raw (@zip.root_files || []).to_json %>;
  var processedCheck;

  $(function() {
    processedCheck = setInterval(function() {
      $.ajax({
             url: "/game_zips/<%= @zip.id %>/root_files",
             type: "GET",
             data: {
               game_id: "<%= @game.id %>",
             },
             success: function(result) {
               $(".file-list").html(result);
               clearInterval(processedCheck);
               bindListEvents();
             }
          })
    }, 2000);
  });

  function bindListEvents() {

    $(".executable-list .list-group-item").click(function(e) {

      if (!$(this).hasClass("disabled")) {
        var _this = $(this);
        var selected = $(this).attr("data-file-name");

        $.ajax({
                 url: "/game_zips/<%= @game.current_zip.id %>",
                 type: "PUT",
                 data: {
                   game_id: "<%= @game.id %>",
                   filename: selected
               },
               success: function(result) {
                 $(".executable-list .list-group-item").removeClass("active");
                 _this.addClass("active");
               }
              });

      }
    });
  }
</script>

<%= page_heading :h1, "<em>#{@game.title}</em>" %>

