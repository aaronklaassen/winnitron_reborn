<div class="modal fade" id="playlistModal" tabindex="-1" role="dialog" aria-labelledby="playlistModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="playlistModalLabel">Add to Playlist</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% current_user.playlists.each do |playlist| %>
          <div class="row col-sm-12 p-0 m-1 add-to-playlist" style="background-image: url('<%= playlist.cover_image.url(w: 450, h: 25) %>');">
            <a href="<%= playlist.id %>" class="p-3 existing-playlist" data-playlist-id="<%= playlist.id %>">
              <%= playlist.title %>
              <span class="float-right playlist-check invisible">âœ“</span>
            </a>
          </div>
        <% end %>

        <div class="row col-sm-12 p-0 m-1 add-to-playlist">
          <a href="/playlists/new" class="mt-3 p-3 create-playlist">add this game to a new playlist</a>
        </div>
      </div>
    </div>
  </div>
</div>