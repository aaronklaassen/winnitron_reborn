<div class="page">
  <%= page_heading :h2, "Sign In" %>

  <%= render "shared/third_party_auth", action: "Sign in" %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form form-horizontal" }) do |f| %>
    <%= render "devise/shared/errors", messages: [flash[:alert]] if flash[:alert] %>

    <div class="form-group">
      <%= f.label :email, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <%= f.check_box :remember_me, checked: true %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>

    <div class="actions form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit "Sign in", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>


  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= link_to "forgot your password?", new_user_password_path %>
    </div>
  </div>

  <div class="clearfix"></div>
</div>