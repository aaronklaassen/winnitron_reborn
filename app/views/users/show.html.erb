<div class="row">
  <div class="col-lg-12">

    <div class="row mb-3 mt-3">
      <div class="col-lg-3 col-sm-3">
        <%= image_tag @user.gravatar_url, class: "avatar float-left" %>
      </div>

      <div class="col-lg-9 col-sm-9">
        <%= page_heading :h1, @user.name %>
        <% @user.links.each do |link| %>
          <h4><%= link_to link.url, link.url %></h4>
        <% end %>
      </div>
    </div>


    <% if @user.games.any? %>
      <div class="row">
        <h4 class="col-lg-12">Games</h4>
        <%= render "games/list", games: @user.games %>
      </div>
    <% end %>

    <% if @user.arcade_machines.any? %>
      <div class="row">
        <h4 class="col-lg-12">Winnitrons</h4>
        <%= render "arcade_machines/list", arcade_machines: @user.arcade_machines %>
      </div>
    <% end %>

    <% if @user.playlists.any? %>
      <div class="row">
        <h4 class="col-lg-12">Playlists</h4>
        <%= render "playlists/list", playlists: @user.playlists %>
      </div>
    <% end %>
  </div>

</div>