<% imageable.images.each do |image| %>
  <div class="thumbnail col-sm-4">
    <a href="<%= image.url %>">
      <img src="<%= image.url %>">
    </a>

    <% if user_signed_in? && (current_user.owns?(imageable) || current_user.admin?) %>
      <div class="image-controls pull-right">
        <% if image == imageable.cover_image %>
          make cover
        <% else %>
          <%= link_to "make cover", image_path(image, cover: true), method: :patch %>

        <% end %>
        |
        <a href="" class="remove">remove</a>
      </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
<% end %>