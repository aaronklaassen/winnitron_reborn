<!DOCTYPE html>
<html lang="en">
  <%= render "layouts/head" %>
  <body>

    <div class="container-fluid">
      <div class="row">
        <%= render "shared/navbar" %>

        <!-- Sidebar -->
        <% if user_signed_in? %>
          <div class="col-md-3" id="pane-sidebar">
            <div class="sidebar-nav">
              <%= render "shared/sidebar" %>
            </div>
          </div>
          <div class="col-md-9 logged-in" id="pane-content">
            <%= yield %>
          </div>
        <% else %>
          <!-- Sidebar doesn't show if not signed in -->
          <div class="col-md-12 logged-out" id="pane-content">
            <%= yield %>
          </div>
        <% end %>


      </div><!--/row-->

      <footer>
        &nbsp;
      </footer>

    </div> <!-- /container -->

  </body>


  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', '<%= ENV["GOOGLE_ANALYTICS_TRACKING_ID"] %>', 'auto');
    ga('send', 'pageview');

  </script>
</html>
